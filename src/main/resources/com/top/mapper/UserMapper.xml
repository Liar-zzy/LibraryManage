<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.top.mapper.UserMapper">

    <insert id="addAUser" parameterType="com.top.pojo.User">
        insert into reader values (#{addReader.id}, #{addReader.password}, #{addReader.name}, #{addReader.gender},
        #{addReader.registerDate}, #{addReader.tel}, #{addReader.address})
    </insert>

    <delete id="deleteAUser" parameterType="String">
        delete from reader where id = #{deleteReader}
    </delete>

    <update id="modifyAUser" parameterType="com.top.pojo.User">
        update reader
        <set>
            <if test="modifyReader.password != null and modifyReader.password != ''">
                password = #{modifyReader.password},
            </if>

            <if test="modifyReader.name != null and modifyReader.name != ''">
                name = #{modifyReader.name},
            </if>

            <if test="modifyReader.gender != null and modifyReader.gender != ''">
                gender = #{modifyReader.gender},
            </if>

            <if test="modifyReader.registerDate != null and modifyReader.registerDate != ''">
                registerDate = #{modifyReader.registerDate},
            </if>

            <if test="modifyReader.tel != null and modifyReader.tel != ''">
                tel = #{modifyReader.tel},
            </if>

            <if test="modifyReader.address != null and modifyReader.address != ''">
                address = #{modifyReader.address}
            </if>
        </set>
        <where>
            id = #{modifyReader.id}
        </where>
    </update>

    <select id="getAUser" parameterType="String" resultType="com.top.pojo.User">
        select * from reader where id = #{getReader}
    </select>

    <select id="getAllUser" parameterType="String" resultType="com.top.pojo.User">
        select * from reader
    </select>

</mapper>