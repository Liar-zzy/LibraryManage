<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.top.mapper.ManagerMapper">

    <insert id="addAManager" parameterType="com.top.pojo.Manager">
        insert into manager values (#{addManager.id}, #{addManager.name}, #{addManager.password})
    </insert>

    <delete id="deleteAManager" parameterType="String">
        delete from manager where id = #{deleteManager}
    </delete>

    <update id="modifyAManager" parameterType="com.top.pojo.Manager">
        update manager
        <set>
            <if test="modifyManager.name != null and modifyManager.name != ''">
                name = #{modifyManager.name},
            </if>

            <if test="modifyManager.password != null and modifyManager.password != ''">
                password = #{modifyManager.password}
            </if>
        </set>
        <where>
            id = #{modifyManager.id}
        </where>
    </update>

    <select id="getAManager" parameterType="String" resultType="com.top.pojo.Manager">
        select * from manager where id = #{getManager}
    </select>

</mapper>